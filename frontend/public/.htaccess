<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Ignore the backend folder
  RewriteCond %{REQUEST_URI} ^/backend [NC]
  RewriteRule .* - [L]

  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>
